    title Book Dashboard
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      }
      
      body {
        background-color: #ffffff;
      }
      
      .container {
        display: flex;
        height: 100vh;
      }
      
      /* Sidebar */
      .sidebar {
        width: 115px;
        border-right: 1px solid #e5e7eb;
        display: flex;
        flex-direction: column;
      }
      
      .sidebar-header {
        height: 64px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .sidebar-header p {
        font-size: 12px;
        font-weight: 500;
        color: #6b7280;
      }
      
      .sidebar-content {
        display: flex;
        flex-direction: column;
        flex: 1;
      }
      
      .sidebar-nav {
        padding: 16px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 32px;
      }
      
      .active-nav-item {
        width: 100%;
        height: 40px;
        background-color: #1fbbd6;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .active-nav-icon {
        width: 24px;
        height: 24px;
        background-color: white;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .active-nav-icon span {
        color: #1fbbd6;
        font-size: 18px;
      }
      
      .nav-icon {
        width: 24px;
        height: 24px;
        color: #9ca3af;
      }
      
      .sidebar-footer {
        padding: 16px 0;
        display: flex;
        justify-content: center;
      }
      
      /* Main Content */
      .main {
        flex: 1;
        display: flex;
        flex-direction: column;
      }
      
      /* Header */
      .header {
        height: 64px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
      }
      
      .header h1 {
        font-size: 18px;
        font-weight: 500;
      }
      
      .header-actions {
        display: flex;
        align-items: center;
        gap: 16px;
      }
      
      .notification-btn {
        position: relative;
      }
      
      .notification-icon {
        width: 20px;
        height: 20px;
        color: #6b7280;
      }
      
      .notification-badge {
        position: absolute;
        top: 0;
        right: 0;
        width: 8px;
        height: 8px;
        background-color: #ef4444;
        border-radius: 50%;
      }
      
      .avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-color: #ee0355;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
      }
      
      /* Content */
      .content {
        flex: 1;
        padding: 24px;
        overflow: auto;
      }
      
      /* Search and Filters */
      .search-filters {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
      }
      
      .search-container {
        position: relative;
        width: 200px;
      }
      
      .search-input {
        width: 100%;
        padding: 8px 12px;
        padding-right: 40px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        font-size: 14px;
      }
      
      .search-icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        width: 16px;
        height: 16px;
        color: #9ca3af;
      }
      
      .filters {
        display: flex;
        align-items: center;
        gap: 16px;
      }
      
      .filter-label {
        font-size: 14px;
        color: #6b7280;
      }
      
      .filter-dropdown {
        display: flex;
        align-items: center;
        gap: 8px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 6px 12px;
      }
      
      .filter-text {
        font-size: 14px;
      }
      
      .dropdown-icon {
        width: 16px;
        height: 16px;
        color: #6b7280;
      }
      
      .upload-btn {
        background-color: #1fbbd6;
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
        border: none;
        cursor: pointer;
      }
      
      .upload-icon {
        width: 16px;
        height: 16px;
      }
      
      /* Book Tables */
      .books-section {
        margin-bottom: 32px;
      }
      
      .section-title {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 16px;
      }
      
      .table-container {
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        overflow: hidden;
      }
      
      table {
        width: 100%;
        border-collapse: collapse;
      }
      
      thead {
        background-color: #f9fafb;
        text-align: left;
      }
      
      th {
        padding: 12px 16px;
        font-size: 14px;
        font-weight: 500;
        color: #6b7280;
      }
      
      td {
        padding: 12px 16px;
        font-size: 14px;
        border-top: 1px solid #e5e7eb;
      }
      
      .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 2px 10px;
        border-radius: 9999px;
        font-size: 12px;
        font-weight: 500;
        background-color: #b6f6d0;
        color: #129145;
      }
      
      /* Pagination */
      .pagination {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 16px;
      }
      
      .page-numbers {
        display: flex;
        align-items: center;
        gap: 4px;
      }
      
      .page-btn {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        border: none;
      }
      
      .active-page {
        background-color: #1fbbd6;
        color: white;
      }
      
      .inactive-page {
        color: #6b7280;
      }
      
      .inactive-page:hover {
        background-color: #f3f4f6;
      }
      
      .ellipsis {
        margin: 0 8px;
        color: #6b7280;
      }
      
      .page-info {
        display: flex;
        align-items: center;
        gap: 4px;
      }
      
      .page-text {
        font-size: 14px;
        color: #6b7280;
      }
      
      .chevron-icon {
        width: 16px;
        height: 16px;
        color: #6b7280;
      }

