//- Settings / Profile Page
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title BookOrbit - Settings
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100..900;1,100..900&family=Euphoria+Script&display=swap" rel="stylesheet")
    link(href="/css/reusable.css" rel="stylesheet")
    link(href="/css/user-dashboard.css" rel="stylesheet")
    
  body.h-screen
    .top-navbar
        h1.logo-text BookOrbit
        h1.text-xl.font-semibold.pl-3 Settings
        .flex.items-center.gap-4.ml-auto
          .w-8.h-8.rounded-full.overflow-hidden(style="background-color: #dccdbe;")
            img(src="https://placehold.co/40x40/dccdbe/ffffff?text=U" alt="User")#profile-picture

    .flex.h-full
      // Sidebar
      include partials/sidebar.pug
      // Main Content
      .flex-1.flex.flex-row.bg-gray-50
        // Settings Menu
        .w-64.bg-white.rounded-xl.shadow-md.mt-10.ml-10.p-6.flex.flex-col.gap-2
          h2.text-lg.font-semibold.mb-4 Settings
          button.bg-indigo-100.text-indigo-700.font-semibold.rounded-md.px-4.py-2.text-left Profile
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) Cards
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) Subscription
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) My books
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) Fines
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) General settings
        // Profile Section
        .flex-1.mt-10.ml-10.bg-white.rounded-xl.shadow-md.p-10
          h2.text-xl.font-semibold.mb-6 Profile
          .flex.items-center.gap-6.mb-8
            .w-20.h-20.rounded-full.overflow-hidden.bg-gray-200.flex.items-center.justify-center
              i.fas.fa-user.text-4xl.text-gray-500
            .flex.flex-col
              span.text-lg.font-bold#profileName
              span.text-sm.text-gray-400#profileUsername
              span.text-sm.text-gray-500#profileEmail
          .flex.gap-4.mb-8
            button#editProfileBtn(type="button" class="bg-blue-600 text-white font-semibold rounded-lg shadow-md px-6 py-2 hover:bg-blue-700") Edit
            button#deleteAccountBtn(type="button" class="bg-red-100 text-red-700 font-semibold rounded-lg shadow-md px-6 py-2 hover:bg-red-200") Delete Account
          // Profile Details Table
          table.w-full.text-left
            tbody
              tr
                td.font-semibold.py-2 Name
                td#profileNameCell.py-2
              tr
                td.font-semibold.py-2 Email
                td#profileEmailCell.py-2
              tr
                td.font-semibold.py-2 Username
                td#profileUsernameCell.py-2
  script(src="/js/settings.js")
  script(src="/js/sidebar.js") 